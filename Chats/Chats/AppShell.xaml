<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Chats.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Chats"
    xmlns:auth="clr-namespace:Chats.Pages.Auth"
    xmlns:main="clr-namespace:Chats.Pages.Main.ListChats" 
    Shell.FlyoutBehavior="Disabled"
    Title="Chats">
    
     
    <ShellContent ContentTemplate="{DataTemplate auth:Login}" Route="Login" />
    <ShellContent ContentTemplate="{DataTemplate auth:Register}" Route="Register" /> 
    <ShellContent ContentTemplate="{DataTemplate main:PersonChats}" Route="PersonChats" />
    <ShellContent ContentTemplate="{DataTemplate main:GroupChats}" Route="GroupChats"/>
</Shell>
