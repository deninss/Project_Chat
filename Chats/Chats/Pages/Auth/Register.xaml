<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chats.Pages.Auth.Register">
    <VerticalStackLayout
        Margin="40"
         Spacing="15" >
         <Label 
         Margin="0,100,0,10"
         Text="Регистрация"
         FontSize="30"
         VerticalOptions="Center" 
         HorizontalOptions="Start"/>
        <Entry FontSize="20" Placeholder="Имя" Text="{Binding Name}"/>
        <Entry FontSize="20" Placeholder="Фамилия" Text="{Binding Surname}"/>
        <Entry FontSize="20" Placeholder="Отчество" Text="{Binding Patronymic}"/>
        <Entry FontSize="20" Placeholder="Почта" Text="{Binding Email}"/>
        <Entry IsPassword="true" FontSize="20" Placeholder="Пароль" Text="{Binding Password}"/>
        <Label 
         x:Name="fyp"
         Text="Забыли пароль?"
         FontSize="15"
         VerticalOptions="Center" 
         HorizontalOptions="Start"/>
        <Button Text="Войти" Margin="0,20,0,0" Command="{Binding RegisterCommand}" />
        <Label 
             x:Name="login"
             Text="Назад"
            Padding="10"
            Margin="-10"
             FontSize="15"
             VerticalOptions="Center" 
             HorizontalOptions="Start">

        </Label>
    </VerticalStackLayout>
</ContentPage>