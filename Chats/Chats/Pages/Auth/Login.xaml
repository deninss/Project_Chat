<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chats.Pages.Auth.Login">
    <VerticalStackLayout
        Margin="40"
        Spacing="15">
        <Label 
            Margin="0,150,0,100"
            Text="Вход в систему" 
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Entry FontSize="20" Placeholder="Почта" Text="{Binding Email}"/>
        <Entry IsPassword="true" FontSize="20" Placeholder="Пароль" Text="{Binding Password}"/>
        <Label 
            x:Name="fyp"
            Margin="-10"
            Padding="10"
            Text="Забыли пароль?"
            FontSize="15"
            VerticalOptions="Center" 
            HorizontalOptions="Start"/>
        <Button Text="Войти" Margin="0,10,0,0" Command="{Binding LoginCommand}" />
        <Label 
            x:Name="reg"
            Padding="10"
            Margin="-10"
            Text="Зарегистрироваться"
            FontSize="15"
            VerticalOptions="Center" 
            HorizontalOptions="Start">
        
        </Label>
    </VerticalStackLayout>
</ContentPage>