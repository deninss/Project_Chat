<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chats.Pages.Main.ListChats.GroupChats">
    <VerticalStackLayout Padding="15">
        <VerticalStackLayout.GestureRecognizers>
            <SwipeGestureRecognizer Direction="Right" Command="{Binding PersonChatCommand}"/>
        </VerticalStackLayout.GestureRecognizers>
        <Border   BackgroundColor="White">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <SearchBar   Placeholder="Поиск групп" FontSize="20" TextColor="Black" Text="{Binding Search}" SearchCommand="{Binding SearchCommand}"/>
        </Border>

    </VerticalStackLayout>
</ContentPage>